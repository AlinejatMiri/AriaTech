<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add product | Ariatech Admin</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    .upload-status {
      margin-top: 8px;
      padding: 10px;
      border-radius: 4px;
      display: none;
    }
    .upload-status.success {
      display: block;
      background: #d4edda;
      color: #155724;
    }
    .upload-status.error {
      display: block;
      background: #f8d7da;
      color: #721c24;
    }
    .image-preview {
      margin-top: 12px;
      max-width: 200px;
      display: none;
    }
    .image-preview img {
      max-width: 100%;
      border-radius: 4px;
      border: 1px solid #ddd;
    }
    .btn-primary:disabled {
      opacity: 0.6;
      cursor: not-allowed;
    }
  </style>
</head>

<body class="theme-light admin-body">
  <header class="top-nav admin-nav">
    <div class="nav-left">
      <a href="/" class="logo">Ariatech</a>
      <span class="admin-badge">Admin</span>
    </div>
  </header>

  <main class="admin-main">
    <h1>Add product</h1>
    <form class="admin-form" action="/admin/products" method="post" enctype="multipart/form-data">
      <div class="form-row">
        <label for="name">Name *</label>
        <input type="text" id="name" name="name" required />
      </div>
      <div class="form-row">
        <label for="brand">Brand</label>
        <input type="text" id="brand" name="brand" />
      </div>
      <div class="form-row">
        <label for="category">Category</label>
        <input type="text" id="category" name="category" placeholder="Laptops, Desktops, Accessories" />
      </div>
      <div class="form-row">
        <label for="price">Price (USD) *</label>
        <input type="number" step="0.01" id="price" name="price" required />
      </div>
      <div class="form-row">
        <label for="imageFile">Product Image</label>
        <input type="file" id="imageFile" name="imageFile" accept="image/*" />
        <div id="uploadStatus" class="upload-status"></div>
        <div id="imagePreview" class="image-preview">
          <img id="previewImg" src="" alt="Preview" />
        </div>
      </div>
      <div class="form-row">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4"></textarea>
      </div>
      <div class="form-actions">
        <a href="/admin" class="btn-secondary">Cancel</a>
        <button type="submit" class="btn-primary" id="submitBtn">Save Product</button>
      </div>
    </form>
  </main>

  <script>
    const fileInput = document.getElementById('imageFile');
    const uploadStatus = document.getElementById('uploadStatus');
    const imagePreview = document.getElementById('imagePreview');
    const previewImg = document.getElementById('previewImg');

    fileInput.addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (!file) return;

      if (!file.type.startsWith('image/')) {
        uploadStatus.textContent = 'Please select an image file';
        uploadStatus.className = 'upload-status error';
        imagePreview.style.display = 'none';
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        previewImg.src = e.target.result;
        imagePreview.style.display = 'block';
        uploadStatus.textContent = 'Image uploaded! Now you can submit the form to create product';
        uploadStatus.className = 'upload-status success';
      };
      reader.onerror = function() {
        uploadStatus.textContent = 'Error reading file';
        uploadStatus.className = 'upload-status error';
      };
      reader.readAsDataURL(file);
    });
  </script>
</body>

</html>