<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit product | Ariatech Admin</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    .upload-status {
      margin-top: 8px;
      padding: 10px;
      border-radius: 4px;
      display: none;
    }
    .upload-status.success {
      display: block;
      background: #d4edda;
      color: #155724;
    }
    .upload-status.error {
      display: block;
      background: #f8d7da;
      color: #721c24;
    }
    .upload-status.uploading {
      display: block;
      background: #fff3cd;
      color: #856404;
    }
    .image-preview {
      margin-top: 12px;
      max-width: 200px;
    }
    .image-preview img {
      max-width: 100%;
      border-radius: 4px;
      border: 1px solid #ddd;
    }
    .uploaded-url {
      margin-top: 8px;
      font-size: 0.8rem;
      color: #666;
      word-break: break-all;
    }

    .categories{
      height: 40px;
      padding: 4px;
      font-size: 17px;
    }
  </style>
</head>

<body class="theme-light admin-body">
  <header class="top-nav admin-nav">
    <div class="nav-left">
      <a href="/" class="logo">Ariatech</a>
      <span class="admin-badge">Admin</span>
    </div>
  </header>

  <main class="admin-main">
    <h1>Edit product</h1>
    <form class="admin-form" id="productForm" action="/admin/products/<%= product.id %>" method="post">
      <div class="form-row">
        <label for="name">Name *</label>
        <input type="text" id="name" name="name" value="<%= product.name %>" required />
      </div>
      <div class="form-row">
        <label for="brand">Brand</label>
        <input type="text" id="brand" name="brand" value="<%= product.brand || '' %>" />
      </div>
      <div class="form-row">
        <label for="category">Category</label>
        <select id="category" name="category" class="categories">
          <option value="computer-parts" <%= product.category === 'computer-parts' ? 'selected' : '' %>>Computer Parts</option>
          <option value="oem-packages" <%= product.category === 'oem-packages' ? 'selected' : '' %>>OEM Packages</option>
          <option value="computer" <%= product.category === 'computer' ? 'selected' : '' %>>Computer</option>
          <option value="peripherals" <%= product.category === 'peripherals' ? 'selected' : '' %>>Peripherals</option>
          <option value="storage" <%= product.category === 'storage' ? 'selected' : '' %>>Storage</option>
          <option value="games-and-hobbies" <%= product.category === 'games-and-hobbies' ? 'selected' : '' %>>Games and Hobbies</option>
          <option value="network" <%= product.category === 'network' ? 'selected' : '' %>>Network</option>
          <option value="office-supplies" <%= product.category === 'office-supplies' ? 'selected' : '' %>>Office Supplies</option>
          <option value="software" <%= product.category === 'software' ? 'selected' : '' %>>Software</option>
          <option value="accessory" <%= product.category === 'accessory' ? 'selected' : '' %>>Accessory</option>
        </select>
      </div>
      <div class="form-row">
        <label for="price">Price (USD) *</label>
        <input type="number" step="0.01" id="price" name="price" value="<%= product.price %>" required />
      </div>
      <div class="form-row">
        <label for="imageFile">Product Image</label>
        <input type="file" id="imageFile" name="imageFile" accept="image/*" />
        <div id="currentImage" class="image-preview">
          <p style="margin-bottom: 4px; font-size: 0.85rem; color: #666;">Current Image:</p>
          <img id="previewImg" src="<%= product.image_url || '/images/placeholder-laptop.jpg' %>" alt="Current Image" />
        </div>
        <div id="uploadStatus" class="upload-status"></div>
        <div id="newImagePreview" class="image-preview" style="display: none;">
          <img id="newPreviewImg" src="" alt="New Preview" />
        </div>
        <div id="uploadedUrl" class="uploaded-url"></div>
        <input type="hidden" id="imageUrl" name="imageUrl" value="<%= product.image_url || '' %>" />
      </div>
      <div class="form-row">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4"><%= product.description || '' %></textarea>
      </div>
      <div class="form-row checkbox-row">
        <label>
          <input type="checkbox" id="isSpecial" name="isSpecial" value="true" <%= product.is_special ? 'checked' : '' %> />
          Mark as Special Product
        </label>
      </div>
      <div class="form-actions">
        <a href="/admin" class="btn-secondary">Cancel</a>
        <button type="submit" class="btn-primary" id="submitBtn">Update Product</button>
      </div>
    </form>
  </main>

  <script>
    const fileInput = document.getElementById('imageFile');
    const uploadStatus = document.getElementById('uploadStatus');
    const newImagePreview = document.getElementById('newImagePreview');
    const newPreviewImg = document.getElementById('newPreviewImg');
    const uploadedUrl = document.getElementById('uploadedUrl');
    const imageUrlInput = document.getElementById('imageUrl');
    const currentImage = document.getElementById('currentImage');

    fileInput.addEventListener('change', async function(e) {
      const file = e.target.files[0];
      if (!file) return;

      if (!file.type.startsWith('image/')) {
        uploadStatus.textContent = 'Please select an image file';
        uploadStatus.className = 'upload-status error';
        newImagePreview.style.display = 'none';
        uploadedUrl.textContent = '';
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        newPreviewImg.src = e.target.result;
        newImagePreview.style.display = 'block';
        currentImage.style.display = 'none';
      };
      reader.readAsDataURL(file);

      uploadStatus.textContent = 'Uploading to Supabase...';
      uploadStatus.className = 'upload-status uploading';

      const formData = new FormData();
      formData.append('imageFile', file);

      try {
        const response = await fetch('/admin/upload-image', {
          method: 'POST',
          body: formData
        });

        const result = await response.json();

        if (result.success) {
          uploadStatus.textContent = '✅ Image uploaded to Supabase successfully!';
          uploadStatus.className = 'upload-status success';
          uploadedUrl.textContent = 'URL: ' + result.imageUrl;
          imageUrlInput.value = result.imageUrl;
        } else {
          uploadStatus.textContent = '❌ Upload failed: ' + result.error;
          uploadStatus.className = 'upload-status error';
          uploadedUrl.textContent = '';
        }
      } catch (err) {
        uploadStatus.textContent = '❌ Error: ' + err.message;
        uploadStatus.className = 'upload-status error';
        uploadedUrl.textContent = '';
      }
    });
  </script>
</body>

</html>
